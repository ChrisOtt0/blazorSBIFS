@page "/register"
@inject IHttpService _http
@inject ITokenService _token
@inject NavigationManager _nav

<PageTitle>Register</PageTitle>

<div class="col-12 main-div">
	<div class="center col-6">
		<img class="main-logo" src="images/sbifs.png"/>
		<h1>Register</h1>
		<br />
		<input type="text" @bind-value="Name" class="form-control centered-input" placeholder="Name.." />
		<br />
		<input type="text" @bind-value="Email" class="form-control centered-input" placeholder="Email.." />
		<br />
		<input type="password" @bind-value="Password" class="form-control centered-input" placeholder="Password.." />
		<br />
		<input type="password" @bind-value="ConfirmPassword" class="form-control centered-input" placeholder="Confirm password.." />
		<br />
		<button class="btn btn-primary" @onclick="Submit">Submit</button>
		Already have an account? <a class="form-link" href="/login">Login</a>
		<br/>
		<br/>
		<p class="feedback-label">@Message</p>
	</div>
</div>

